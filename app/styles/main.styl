@import nib

html, body
  margin: 20px

body
    background: #fafafa
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
    color: #333

.hero-unit
    margin: 50px auto 0 auto;
    width: 300px;
    font-size: 18px;
    font-weight: 200;
    line-height: 30px;
    background-color: #eee;
    border-radius: 6px;
    padding: 60px;

.hero-unit h1
    font-size: 60px
    line-height: 1
    letter-spacing: -1px

.billDetail h1
    text-align: center
    width: 90%

.billText
    display: block
    width: 50%
    margin: 0 auto