@import nib
@import "bootstrap/variables.styl"
@import url("http://fonts.googleapis.com/css?family=Oxygen:400,700")
@import "district_map.styl"
@import "compare_bar_chart.styl"
@import "d3Donut.styl"
@import "words.styl"
@import "billtext.styl"
@import "loading.styl"
@import "words_bar_chart.styl"
@import "about.styl"
@import "hex.styl"
@import "compare.styl"

html body
  font-family 'Oxygen', "Helvetica Neue", Helvetica, Arial, sans-serif !important
  margin 0
  padding 0
  background-image url('/images/tile.png')
  text-transform none
  letter-spacing 0
  color $grayDark
  text-align center

.left
  float left

.right
  float right

.index-text
  font-size 20px
  margin 10px

.container
  width 0px

#nav
  margin-top 0px
  margin-bottom 20px
  text-align center

#nav a
  border-color $gray
  padding-bottom 5px
  display block
  font-size 17px

#nav ahover, #nav aactive, #nav afocus
  border-color $blue

#tagline
  font-size 60px

#nav a.active
  color $grayLighter
  border-color $grayLighter

#nav a.active
  color $grayLighter
  border-color $grayLighter

#nav p
  display -moz-inline-stack
  display inline-block
  vertical-align middle
  *vertical-align auto
  zoom 1
  *display inline
  vertical-align middle
  width 120px
  margin 0 10px

#nav p.alpha
  margin-left 0

#nav p.omega
  margin-right 0

.hero-unit
  margin 50px auto 0 auto
  width 300px
  font-size 18px
  font-weight 200
  line-height 30px
  background-color $grayLighter
  border-radius 6px
  padding 60px

.hero-unit h1
  font-size 60px
  line-height 1
  letter-spacing -1px

.dropdown-menu.pull-right
  top: 30px

#sticky-footer
  position fixed
  font-size 0.6rem
  height 1.3rem
  width 100%
  bottom 0
  padding 0
  color $white
  background-color $gray
  z-index 300
  a
    color $white
  span
    padding 0 10px

#body_container
  bottom 1.3rem
