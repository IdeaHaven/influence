html body
  font-family 'Oxygen', "Helvetica Neue", Helvetica, Arial, sans-serif !important
  background-image url('/images/tile.png')
  text-transform none
  letter-spacing 0
  color $grayDark
  text-align center

///////////////////
// Sticky Footer //
///////////////////
$footer_height = 60px

html, body
  height 100%
  padding 0
  margin 0

#push, #footer
  height $footer_height

#wrap
  min-height 100%
  margin 0 auto -1*$footer_height auto

//responsive fix
@media (max-width 767px)
  #footer
    margin-left -20px
    margin-right -20px
    padding-left 20px
    padding-right 20px

//////////////////
//
//  Default Styles
//
//////////////////

//Floats
.left
  float left
.right
  float right

// Headers and paragraphs
h2
  text-align center
p
  text-align left

//Colors
.blue
  color $blue
.red
  color $red
.orange
  color $orange
.green
  color $green
.grayDark
  color $grayDark

/////// Add to some category ///////////

.skeleton
  padding 20px

.index-text
  font-size 20px
  margin 10px

h2.pink
  color $pink

#nav
  margin-top 0px
  margin-bottom 20px
  text-align center

.navbar .nav > .active > a, .navbar .nav > .active > a:hover, .navbar .nav > .active > a:focus
  background-color $blue

.dropdown-menu.pull-right
  top: 30px

#sticky-footer
  position fixed
  font-size 0.6rem
  height 1.3rem
  width 100%
  bottom 0
  padding 0
  color $white
  background-color $gray
  z-index 300
  a
    color $white
  span
    padding 0 10px

#body_container
  bottom 1.3rem
